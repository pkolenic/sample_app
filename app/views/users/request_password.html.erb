<% provide(:title, "Request Password Reset") %>
<h1 class="banner">Request Password Reset</h1>

<div class="row">
  <div class="span6">
  	<%= form_tag send_reset_request_path, :method => :patch do |f| %>		
		<%= label_tag :email, "Enter the email address for the account to reset" %>
		 <%= text_field_tag :email, params[:email], placeholder: 'email address' %>

	    <%= submit_tag "Submit Request", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

