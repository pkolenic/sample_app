<li>
  <% if current_user.can_approve? && user.pending_approval? %>
  	<% if user.wot_id.blank? %>
  		(<%=user.wot_name%> is not a valid World of Tanks user)
  	<% end %>
  	<br>
  <% end %>
  <div class="gravatar">
  	<%= gravatar_for user, size: 52 %>
  	<% if user.clan_id != CLAN_ID %>
  		<span><%= user.clan_abbr %></span>
  	<% end %>
  </div>
  <div class="user_summary">
  	<%= link_to user.wot_name, user %>
  	<% if !user.last_online.blank? %>
		<div class="LastOnline">
			<span class="stat_label">Last Online:</span>
			<span class="stat_value"><%= user.last_online.strftime("%b %d %Y %l:%M%p %Z") %></span>			
		</div>
	<% end %>
	<% if !user.battles_count.blank? %>
		<div class="BattleCount">
			<span class="stat_label">Battles:</span>
			<span class="stat_value"><%= user.battles_count %></span>
		</div>
		<div class="WinRatio">
			<span class="stat_label">Win Rate</span>
			<span class="stat_value"><%= (user.wins.to_f / user.battles_count * 100).round(2) %>%</span>
		</div>		
		<div class="KillDeathRatio">
			<span class="stat_label">Kill/Death Ratio:</span>
			<span class="stat_value"><%= (user.frags.to_f / (user.battles_count - user.survived)).round(2) %></span>				
		</div>
	<% end %>	
  </div>
  <%= image_tag("http://wotlabs.net/sig/na/#{user.wot_name}/signature.png", alt: 'win7 data') %>
   

  <div class="action_buttons">
	  <% if current_user.admin? && !current_user?(user) %>
	    <%= link_to "delete", user, method: :delete,
	                            data: { confirm: "You sure?" }, class: 'btn btn-danger' %>
	  <% end %>
	  <% if current_user.can_approve? && user.pending_approval? %>
	  	<%= link_to "approve", approve_path(user), method: :patch, class: 'btn btn-warning' %>
	  <% end %>
	  
	  <% if current_user.can_appoint_clanwar?(user) %>
	  	<% if user.clanwar_member? %>
	  		<%= link_to "remove from clanwar team", remove_clanwar_path(user), method: :patch, class: 'btn btn-warning' %>
	  	<% else %>
	  		<%= link_to "add to clanwar team", add_clanwar_path(user), method: :patch, class: 'btn btn-warning' %>
	  	<% end %>
	  <% end %>
  </div>
</li>