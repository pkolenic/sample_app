<% provide(:title, 'Contact') %>
<h1>Contact</h1>
<div>
	<h3>Team Speak Server</h3>
	<span class="field">Server Address:</span> <span class="value"><%= CLAN_TEAMSPEAK_SERVER %></span><br/>
	<span class="field">Password:</span> <span class="value"><%= CLAN_TEAMSPEAK_PASSWORD %></span><br/>
	
	<h3>Official Clan Email Address</h3>
	<%= mail_to CLAN_EMAIL %>
	
	<h3>Official World of Tanks Clan Page</h3>
	<%= link_to "[#{CLAN_SHORT_NAME}] #{CLAN_NAME}", "http://worldoftanks.com/community/clans/#{CLAN_ID}-#{CLAN_SHORT_NAME}/", target: "_blank" %>
</div>