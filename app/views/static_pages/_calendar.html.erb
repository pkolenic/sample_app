<div id="calendar">
	<h1 id="month">
		<%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
		<%=h @date.strftime("%B %Y") %>
		<%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
	</h1>
	
	<%= calendar_for @events, :today => Time.current, :year => @date.year, :month => @date.month do |calendar| %>
		<%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday')%>
		<% calendar.day(:day_method => :event_start) do |date, events| %>
			<%= date.day %>
			<ul>
				<% for event in events %>
					<li>
						<% if event.event_type == TYPE_TOURNAMENT %>
							<%= link_to image_tag('link_icon.png', alt: "Link Image") + "&nbsp;#{event.name} #{event.event_start.strftime("%l:%M%p %Z")}".html_safe, tournament_path(event.ref_id) %>
						<% else %>
							<%= event.name %> <%= event.event_start.strftime("%l:%M%p %Z") %>
						<% end %>
					</li>
				<% end %>
			</ul>
		<% end %>
	<% end %>
</div>
